{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "hardhat"],
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy",
    "./scripts",
    "./test",
    "./typechain-types"
  ]
}


